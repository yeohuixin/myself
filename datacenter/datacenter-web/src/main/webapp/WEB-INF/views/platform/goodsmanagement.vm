
<!DOCTYPE html>
    #parse("layout/console_layout.vm")
<div class="container main-content">
    <div class="row">
        <div style="margin-top: 20px;">
            <span style="display: inline-block;float: left;font-size: 18px;">物品信息管理</span>
            <div style="clear: both;"></div>
        </div>

        <div class="col-xs-10 nav-right">
            <div class="content-head">

                <div style="margin-top: 20px;">
                    <span style="display: inline-block;float: left;font-size: 18px;">物品管理</span>
                    <div style="clear: both;"></div>
                </div>
                <div style="margin-top: 10px;">
                    <p id="addRole" class="nbtn nbtn-primary" onclick="toAddGoodsForm()"><img
                            src="/static/js/GoodManage/images/+.png"><a>增加物品</a></p>
                    <p id="delGoodsInfo" class="nbtn"><img
                            src="/static/js/GoodManage/images/+.png"><a>删除</a></p>
                </div>
                <div style="float: right;">
                    <div class="form-inline pull-right">
                        <div class="input-group">
                            <input id="searchInput" type="text" class="form-control" placeholder="按物品名称搜索"
                                   style="height: 32px;">
                                  <span class="input-group-btn">
                                    <button id="goodSearchButton" class="nbtn" type="button"
                                            style="position: relative;left: 3px;height: 32px;">搜索</button>
                                  </span>
                        </div>
                    </div>

                </div>
                <div style="clear: both;"></div>
            </div>
        </div>
        <div id="content">
            <table id="goods-table-content" class="table">
                <thead>
                <tr>
                    <th><input id="selectAllGoods" type="checkbox" class="editor-active"></th>
                    <th>物品名称</th>
                    <th>物品单价</th>
                    <th>物品数量</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

<!--添加或者修改物品弹窗-->
<div class="modal fade" id="addGoodsModal" data-backdrop="static" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="width:700px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
                        class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myGoodsModalLabel">添加物品</h4>
            </div>
            <form action="/goodsmanagement/addGoods" method="POST" id="addGoodsForm">
                <div class="modal-body">
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label">物品名称</label>
                            <div class="col-sm-4">
                                <input class="form-control" type="text" name="goodsName" id="goodsNameInput"
                                       placeholder="请输入物品名称">
                            </div>
                            <label for="name" class="col-sm-2 control-label">物品单价</label>
                            <div class="col-sm-4">
                                <input class="form-control" type="text" name="goodsUnitPrice" id="goodsUnitPriceInput"
                                       placeholder="请输入物品单价">
                            </div>
                            <label for="name" class="col-sm-2 control-label">物品数量</label>
                            <div class="col-sm-4">
                                <input class="form-control" type="text" name="goodsCount" id="goodsCountInput"
                                       placeholder="请输入物品数量">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" id="submitButton" value="确定" onclick="submitForm()"
                               class="btn btn-primary">
                        <input type="button" id="cancleButton" value="取消" onclick="cancelForm()"
                               class="btn btn-primary">
                    </div>
                </div>
                <input type="hidden" name="goodsId" value="" id="goodsIdInput">
            </form>
        </div>
    </div>
</div>
